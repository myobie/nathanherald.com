#!/bin/bash

if [[ "$OSTYPE" == "darwin"* ]]; then
  exec hugo
else
  vendor="$(cd "$(dirname ${BASH_SOURCE[0]})/.." && pwd)/vendor"

  if [[ -n "${VERCEL_URL}" ]]; then
    echo "Building for ${VERCEL_URL}"
    exec $vendor/hugo -b "${PREVIEW_URL}"
  else
    echo "Building for the default url"
    exec $vendor/hugo
  fi
fi
