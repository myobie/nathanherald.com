#!/usr/bin/env ruby

require 'pathname'

$force = ARGV.include?("-f")

`which terraform`

if $force or not $?.success?
  system "brew install terraform"
end

`which git-crypt`

if $force or not $?.success?
  system "brew install git-crypt"
end

`which s3cmd`

if $force or not $?.success?
  system "brew install s3cmd"
end

puts "Done."
